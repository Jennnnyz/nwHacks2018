<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="57.01"
        android:text=" " />

    <TextView
        android:id="@+id/home_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="55.40"
        android:text="FindMe"
        android:textAlignment="center"
        android:textSize="30sp" />

    <Button
        android:id="@+id/host_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="12.33"
        android:text="create an event" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/player_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10.24"
        android:text="join an event" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="9.40" />


</LinearLayout>